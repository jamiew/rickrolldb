<%# index for entries %>

<div id="add">
	<form method="POST" action="<%= url(:entries) %>">
		<% entry = Entry.new %>
		<label for="entry[url]">Rickroll URL</label>
		<input type="text" name="entry[url]" size="25" class="large required clear-on-click" value="http://" />
		<input type="submit" name="submit" value="submit" class="submit" />
	</form>
		
</div> <!-- /#add -->

<div id="user-info">
	you are: <span class="username editable"><%= current_user %></span>
</div>


<div id="entries">

	<div id="navigation">
	<h2>		
		<% last_page = (@all_entries.length / @limit).ceil -%>
		<a class="floatRight rss-link" href="/rss"><img src="/images/feed-icon-28x28.png" alt="RSS" title="RSS feed of updates & votes" /></a>
		<%# TODO use url() for the /page/:page URL; also below w/ prev link %>
		<div class="prevnext next"><%= @page < last_page ? link_to('&raquo', "/page/#{@page + 1}", :title => 'Next page') : '&raquo;'%></div>
  	<div class="floatRight" id="page-info">
			The Culprits <br />
	  	<small>
				<%= @all_entries.length %> submitted; <%= @all_entries.select { |e| e.confirmed? }.length %> confirmed
			(page <%= @page %> of <%= last_page %>)
			</small>
		</div>
		<div class="prevnext prev"><%= @page > 1 ? link_to('&laquo', "/page/#{@page - 1}", :title => 'Previous page') : '&laquo;' %></div>
	</h2>
	</div>
	
	<ul>
	<% @entries.sort_by { |e| e.created_at }.reverse.each do |entry| -%>
		<li id="entry-<%= entry.id %>">
			<a href="http://<%= entry.url %>" rel="nofollow"><img src="<%= entry.thumbnail %>" alt="" title="" class="screenshot" /></a>
			
			<div class="info">			
				<% 
					limit = 40
					display = (entry.title || entry.url).gsub(/\/$/,'').gsub(/^http\:\/\//,'')
					display = display.length > limit ? display[0..limit]+'...' : display					
				-%>
				<span class="title"><%= link_to display, entry.link_url, :rel => 'nofollow' %></span>
				<span class="created_at">
					added <%= timeago(entry.created_at) %>
					<% unless entry.updated_at.nil? or entry.created_at == entry.updated_at %>, updated <%= timeago(entry.updated_at) %><% end %>
				</span>
				<% new_voter = entry.flags.select { |f| f.ip == request.remote_ip }.empty? #CACHEME %>	    
			<div class="flags">			
				<span class="confirm"><code>+</code> 
				  <% if new_voter %>
				    <%= link_to "IT'S A RICKROLL", url(:confirm_entry, entry), :class => 'flag hijax' %> 
			    <% else %>
			      <strong>confirmations:</strong>
			    <% end %>
			    <strong class="count"><%= entry.confirmations.length %></strong>
		    </span>
				<span class="dispute"><code>-</code> 
				  <% if new_voter %>
  				  <%= link_to "not a rickroll", url(:dispute_entry, entry), :class => 'flag hijax' if new_voter %> 
  				<% else %>
  				  <strong>disputes:</strong>
  				<% end %>
				  <strong class="count"><%= entry.disputes.length %></strong>
				</span>			
				<br class="clear" />
			</div> <!-- /.flags -->

      <span class="thanks"><em><% if not new_voter %>Thanks for your vote<% end %></em></span>
	
			<div class="comments">
		   	<%= link_to "Comments", url(:entry, entry)+"#disqus_thread" %>
			</div> <!-- /.comments -->



			<div class="stats">
				<% confirms = entry.confirmations.length; disputes = entry.disputes.length %>
				<% width = 300; height = 10 #FIXME %>
				<% disputage = entry.controversy %>
				<%#= "disputage: #{disputage}" %>
				<% disputage = 1 if disputage == 0 or disputage.nan? #... %>
				<div style="float: right; display: inline; width: <%= width - 1%>px; height: 3px; background-color: #aaa;">&nbsp;</div>
				<div style="background-color: #fbb; float: right; clear: right; display: inline; width: <%= ((disputage) * width).to_i %>px; height: <%= height %>px;">&nbsp;<%#= ("%.2f" % disputage) %></div>
				<div style="background-color: #bfb;float: right; display: inline; width: <%= ((1.0-disputage) * width).to_i %>px; height: <%= height %>px; ">&nbsp;<%#= ("%.2f" % (1.0-disputage)) %></div>
			</div> <!-- /.stats -->

			<!-- <div class="comments permalink">
				<%= link_to "comments (#{entry.comments.length}) &#8734;", entry_url(entry) %>
			</div>	 -->

		
  	  </div> <!-- /.info -->
		</li>
	
	
	<% end -%>
	</ul>
</div> <!-- /#entries -->


